<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Usuarios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Lista de Usuarios</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Teléfono</th>
                    <th>Número de Cuenta</th>
                    <th>Sexo</th>
                    <th>Edad</th>
                    <th>Carrera</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.Nombre %></td>
                        <td><%= user.correo %></td>
                        <td><%= user.telefono %></td>
                        <td><%= user.num_cuenta %></td>
                        <td><%= user.sexo %></td>
                        <td><%= user.edad %></td>
                        <td><%= user.carrera %></td>
                        <td>
                            <a href="/edit/<%= user.id %>" class="btn btn-warning btn-sm">Editar</a>
                            <a href="/delete/<%= user.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/add" class="btn btn-primary mb-3">Agregar Usuario</a>
    </div>
</body>
</html>


